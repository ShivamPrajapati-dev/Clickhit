<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".ui.Post.Quotes.ShareQuotePostActivity">

    <RelativeLayout
        android:id="@+id/pic"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/picture"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@color/colorAccent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Shivam prajapati"
            android:textColor="#000"
            android:textSize="20sp" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pic">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/pallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="@string/pallet"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent" />


            <com.google.android.material.chip.ChipGroup
                android:id="@+id/color_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:checkedChip="@id/c1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pallet"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/c1"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="@string/space"
                    app:checkedIcon="@drawable/ic_baseline_check_24"
                    app:chipBackgroundColor="#E57373" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/c2"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/space"
                    app:checkedIcon="@drawable/ic_baseline_check_24"
                    app:chipBackgroundColor="#F06292" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/c3"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/space"
                    app:checkedIcon="@drawable/ic_baseline_check_24"
                    app:chipBackgroundColor="#BA68C8" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/c4"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/space"
                    app:checkedIcon="@drawable/ic_baseline_check_24"
                    app:chipBackgroundColor="#9575CD" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/c5"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/space"
                    app:checkedIcon="@drawable/ic_baseline_check_24"
                    app:chipBackgroundColor="#64B5F6" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/c6"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/space"
                    app:checkedIcon="@drawable/ic_baseline_check_24"
                    app:chipBackgroundColor="#FF7043" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/c7"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/space"
                    app:checkedIcon="@drawable/ic_baseline_check_24"
                    app:chipBackgroundColor="#4DB6AC" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/c8"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/space"
                    app:checkedIcon="@drawable/ic_baseline_check_24"
                    app:chipBackgroundColor="#81C784" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/c9"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/space"
                    app:checkedIcon="@drawable/ic_baseline_check_24"
                    app:chipBackgroundColor="#FFF176" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/c10"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/space"
                    app:checkedIcon="@drawable/ic_baseline_check_24"
                    app:chipBackgroundColor="#FF9C71" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/c11"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/space"
                    app:checkedIcon="@drawable/ic_baseline_check_24"
                    app:chipBackgroundColor="#127681" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/c12"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/space"
                    app:checkedIcon="@drawable/ic_baseline_check_24"
                    app:chipBackgroundColor="#900c3f" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/c13"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/space"
                    app:checkedIcon="@drawable/ic_baseline_check_24"
                    app:chipBackgroundColor="#a8df65" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/c14"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/space"
                    app:checkedIcon="@drawable/ic_baseline_check_24"
                    app:chipBackgroundColor="#184d47" />

            </com.google.android.material.chip.ChipGroup>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/color_chip" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="20dp"
                app:cardBackgroundColor="@color/transparent"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/items"
                app:strokeColor="@color/colorPrimary"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_style"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textSize="20sp" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/slider"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:valueFrom="0"
                        app:haloColor="@color/colorAccent"
                        app:haloRadius="1dp"
                        app:thumbColor="@color/colorAccent"
                        app:tickColorActive="@color/colorAccent" />

                   <com.google.android.material.textfield.TextInputLayout
                       android:id="@+id/spinner"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_margin="10dp"
                       app:hintEnabled="false"
                       app:hintAnimationEnabled="false"
                       style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
                       <AutoCompleteTextView
                           android:id="@+id/text_style"
                           android:background="@color/transparent"
                           android:textColor="#fff"
                           android:hint="@string/text_style"
                           android:textColorHint="@color/colorPrimary"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:inputType="none"
                           />
                   </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/next"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"
                android:text="@string/next"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                app:rippleColor="@color/colorAccent"
                app:strokeColor="@color/colorPrimary"
                app:layout_constraintTop_toBottomOf="@id/card"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>